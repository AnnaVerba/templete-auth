{
  "name": "template",
  "version": "0.0.1",
  "description": "",
  "engines": {
    "node": "18.x",
    "npm": "8.x"
  },
  "author": "",
  "private": true,
  "license": "UNLICENSED",
  "scripts": {
    "build": "nest build",
    "format": "prettier --write \"apps/**/*.ts\" \"libs/**/*.ts\"",
    "start": "nest start",
    "start:dev": "nest start --watch",
    "start:debug": "nest start --debug --watch",
    "start:prod": "node dist/src/main",
    "start:api-gateway": "node dist/apps/api-gateway/main.js",
    "start:auth": "node dist/apps/auth/main.js",
    "start:delivery": "node dist/apps/delivery/main.js",
    "lint": "eslint \"{src,apps,libs,test}/**/*.ts\"  --max-warnings 0",
    "ci:lint": "eslint \"{src,apps,libs,test}/**/*.ts\" --fix",
    "ci:format": "prettier \"src/**/*.ts\" \"test/**/*.ts\"",
    "test": "jest",
    "test:unit-old": "jest --testRegex=\".*\\.spec\\.ts$\"",
    "test:unit": "jest --runInBand --forceExit --logHeapUsage --testRegex=\".*(?<!(int))\\.spec\\.ts$\"",
    "test:watch": "jest --watch",
    "test:cov": "jest --coverage",
    "test:integration": "jest --testRegex=\".*\\.ispec\\.ts$\"",
    "test:debug": "node --inspect-brk -r tsconfig-paths/register -r ts-node/register node_modules/.bin/jest --runInBand",
    "test:e2e": "jest --config ./apps/api-gateway/test/jest-e2e.json",
    "test:e2e:env": "set NODE_ENV=test",
    "test:payment:e2e": "npm run test:e2e:env && jest --config apps/payments/test/jest-e2e.json --maxWorkers=1 --logHeapUsage",
    "migration:generate": "npx sequelize-cli migration:generate --name",
    "migration:run": "npx -production sequelize-cli db:migrate",
    "migration:run-dev": "npx sequelize-cli db:migrate",
    "migration:revert": "npx -production sequelize-cli db:migrate:undo",
    "migration:revert-dev": "npx sequelize-cli db:migrate:undo",
    "migration:revertAll-to": "npx sequelize-cli db:migrate:undo:all --to",
    "prepare": "husky install",
    "setup": "concurrently --max-processes 1 \"yarn:setup:*\"",
    "setup:base": "yarn",
    "all:tests": "(yarn run test:unit && yarn run test:payment:e2e)",
    "setup:api-gateway": "(cd apps/api-gateway && yarn install)",
    "setup:delivery": "(cd apps/auth && yarn install)",
    "setup:user-management": "(cd apps/user-management && yarn install)"
  },
  "dependencies": {
    "@fastify/cookie": "^8.3.0",
    "@fastify/static": "^6.5.1",
    "@nestjs-modules/mailer": "^1.8.1",
    "@nestjs/axios": "^1.0.0",
    "@nestjs/common": "^9.2.1",
    "@nestjs/core": "^9.2.1",
    "@nestjs/jwt": "^9.0.0",
    "@nestjs/microservices": "^9.2.1",
    "@nestjs/platform-express": "^9.2.1",
    "@nestjs/platform-fastify": "^9.2.1",
    "@nestjs/schedule": "^2.1.0",
    "@nestjs/sequelize": "^9.0.0",
    "@nestjs/swagger": "^6.1.3",
    "@nestjs/typeorm": "^9.0.1",
    "@sendgrid/mail": "^7.7.0",
    "@types/cron": "^2.0.0",
    "axios": "^1.2.1",
    "bcryptjs": "^2.4.3",
    "cache-manager": "^5.1.7",
    "class-transformer": "^0.5.1",
    "class-validator": "^0.14.0",
    "concurrently": "^7.6.0",
    "consul": "^1.2.0",
    "dayjs": "^1.11.6",
    "dotenv": "^16.0.3",
    "fastify": "^4.10.2",
    "fastify-cookie": "^5.7.0",
    "googleapis": "^109.0.1",
    "ioredis": "^5.3.1",
    "jsonschema": "^1.4.1",
    "nestjs-pino": "^3.1.1",
    "net": "^1.0.2",
    "node-cache": "^5.1.2",
    "node.url": "^1.0.8",
    "nodemailer": "^6.8.0",
    "os": "^0.1.2",
    "pg": "^8.8.0",
    "pino-http": "^8.2.1",
    "pino-pretty": "^9.1.1",
    "redis": "^4.5.1",
    "reflect-metadata": "^0.1.13",
    "rimraf": "^3.0.2",
    "rxjs": "^7.8.0",
    "sequelize": "^6.28.0",
    "sequelize-typescript": "^2.1.5",
    "swagger-ui-express": "^4.4.0",
    "uuid": "^9.0.0"
  },
  "devDependencies": {
    "@commitlint/cli": "^17.3.0",
    "@commitlint/config-conventional": "^17.3.0",
    "@cspell/eslint-plugin": "^6.18.1",
    "@nestjs/cli": "^9.1.5",
    "@nestjs/schematics": "^9.0.3",
    "@nestjs/testing": "^9.1.6",
    "@types/express": "^4.17.14",
    "@types/jest": "28.1.4",
    "@types/node": "^18.11.10",
    "@types/supertest": "^2.0.11",
    "@typescript-eslint/eslint-plugin": "^5.0.0",
    "@typescript-eslint/parser": "^5.0.0",
    "eslint": "^8.0.1",
    "eslint-config-prettier": "^8.3.0",
    "eslint-plugin-prettier": "^4.2.1",
    "eslint-plugin-promise": "^6.1.1",
    "eslint-plugin-unicorn": "^45.0.2",
    "husky": "^8.0.0",
    "jest": "28.1.2",
    "prettier": "^2.8.4",
    "source-map-support": "^0.5.20",
    "supertest": "^6.1.3",
    "ts-jest": "^28.0.5",
    "ts-loader": "^9.2.3",
    "ts-node": "^10.0.0",
    "tsconfig-paths": "^3.10.1",
    "typescript": "^4.3.5"
  },
  "jest": {
    "moduleFileExtensions": [
      "js",
      "ts"
    ],
    "modulePathIgnorePatterns": [
      "../migrations/"
    ],
    "rootDir": ".",
    "testTimeout": 300000,
    "maxWorkers": 2,
    "testRegex": ".*(?<!(int)).(spec).ts$",
    "workerIdleMemoryLimit": 0.5,
    "coveragePathIgnorePatterns": [
      "mock/",
      "test/",
      "dto/",
      ".module.ts",
      ".spec.ts",
      "main.ts",
      ".schema.ts",
      ".enum.ts",
      ".dictionary.ts",
      ".js",
      ".dto.ts"
    ],
    "transform": {
      "^.+\\.(t|j)s$": "ts-jest"
    },
    "transformIgnorePatterns": [
      "/node_modules"
    ],
    "collectCoverageFrom": [
      "**/*.(t|j)s"
    ],
    "coverageDirectory": "./coverage",
    "testEnvironment": "node",
    "roots": [
      "<rootDir>/apps/",
      "<rootDir>/libs/"
    ],
    "moduleNameMapper": {
      "^@app/shared(|/.*)$": "<rootDir>/libs/shared/src/$1"
    }
  },
  "husky": {
    "hooks": {
      "pre-commit": "lint-staged",
      "pre-push": "npm test:unit"
    }
  },
  "lint-staged": {
    "*.@(ts|tsx)": [
      "npm run lint",
      "npm run format"
    ]
  }
}
